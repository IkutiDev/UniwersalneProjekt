<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniwersalneProjekt.Views.AddCategory"
             Title="Add Quiz">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="Nazwa kategorii:" FontSize="Medium" />
            <Entry x:Name="Name" Text="{Binding Name}" FontSize="Small"/>
            <Label TextColor="Red" Text="{Binding NameError}"/>
            <Button Text="Dodaj" Command="{Binding AddCategoryCommand}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>